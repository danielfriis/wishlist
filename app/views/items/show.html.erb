<% provide(:title, @item.title) %>
<div class="row">

  <div class="span12">
    <h1><%= @item.title %></h1>
  </div>

  <div class="span8">
    <div class="white-box">
      <div class="image-container">
        <%= image_tag @item.image_url.to_s %>
      </div>
    </div>
  </div>
  <aside class="span4">
    <%= link_to "Buy", @item.link, class: "btn btn-large btn-block"%>
    <h3>Additional info</h3>
    <p><%= @item.lists.first.user.name %> and <%= pluralize(@item.wishes.count, 'other') %> wishes this.</p>
  </aside>

</div>