<% provide(:title, @item.title) %>
<div class="row">

  <div class="span8">
    <h3><%= @item.title %></h3>
  </div>

  <aside class="span4">
    <h3>Additional info</h3>
  </aside>

  <div class="span8">
    <div class="white-box">
      <div class="image-container">
        <%= image_tag @item.image_url.to_s %>
      </div>
    </div>
  </div>
  <aside class="span4">
      <div class="white-box">
      <%= @item.link %><br />
      <%= @item.lists.first.user.name %> and <%= pluralize(@item.wishes.count, 'other') %> wishes this.

    </div>
  </aside>

</div>