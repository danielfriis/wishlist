<% provide(:title, 'New wish') %>

<div class="row">
  <div class="span6 offset3 white-box">
  	<h1>New wish</h1>
  	<form>
      <label for="url">Retrieve item</label>
  		<input id="url" type="text">
  		<a href="#" id="urlb" class="btn">Get info</a>
  	</form>

    <%= form_for(@item, html: { multipart: true }) do |f| %>
      <%= render 'fields', f: f %>
      <%= f.submit "Add wish", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>