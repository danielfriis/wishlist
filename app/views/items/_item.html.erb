<div class="span4">
	<div class="white-box item">
		<div class="image-container">
			<%= render 'wishes/wishlistt_it_form', item: item unless mobile_device? %>
			<a href="<%= item_path(item) %>" class="item-link">
				<em class="mark visible-desktop"></em>
				<%= image_tag item.image_url(:medium).to_s %>
			</a>
		</div>
		<h3><%= truncate(item.title, length: 53) %></h3>
		<% if item.price %><p class="muted price"><%= item.price.currency.iso_code %> <%= humanized_money item.price %></p><% end %>
		<p class="muted social-count"><i class="icon-heart"></i> <%= item.wishes.count %> <i class="icon-comment"></i> <%= item.comments.count %></p>
		<%= render 'wishes/wishlistt_it_form', item: item if mobile_device? %>
	</div>
</div>