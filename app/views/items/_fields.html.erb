<%= render 'shared/error_messages', object: f.object %>

<%= f.label :image, "Upload an image" %>
<%= f.file_field :image %>

<%= f.label :remote_image_url, "or paste an image URL" %>
<%= f.text_field :remote_image_url, placeholder: "http://" %>

<%= f.label :title %>
<%= f.text_field :title, placeholder: "Warm Sweater" %>

<%= f.label :link %>
<%= f.text_field :link, placeholder: "http://" %>

<%= label_tag :note %>
<%= text_field_tag :note, nil, placeholder: "Love it in blue!" %>

<%= f.label :list_id %>
<%= select_tag :list_id, options_for_select(@user.lists.all.collect{ |u| [u.name, u.id] }) %>

<label class="checkbox">
	<span class="icons">
		<span class="first-icon fui-checkbox-unchecked"></span>
		<span class="second-icon fui-checkbox-checked"></span>
	</span>
	<%= label :wish, "hide", "Hide from inspiration feed" %>
	<%= check_box :wish, "hide", {}, "true", "false" %>
</label>

<%= f.hidden_field :gender, value: @user.gender %>

<%= f.hidden_field :via %>