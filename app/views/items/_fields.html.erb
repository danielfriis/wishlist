<%= render 'shared/error_messages', object: f.object %>

<%= f.label :image, "Upload an image" %>
<%= f.file_field :image %>

<%= f.label :remote_image_url, "or paste a link to the image" %>
<%= f.text_field :remote_image_url, placeholder: "http://www.abc-shop.com/image.png" %>

<hr />

<!-- <%= f.label :title %> -->
<%= f.text_field :title, placeholder: "Product title (Warm Sweater from ABC Brand)" %>

<!-- <%= f.label :link %> -->
<%= f.text_field :link, placeholder: "Link to product (http://www. ...)" %>


<%= f.hidden_field :price, placeholder: "Optional: Price (E.g.: 20 USD or 100 DKK)" %>

<!-- <%= label_tag :note %> -->
<%= text_field_tag :note, nil, placeholder: "Optional: Short comment (E.g. Love it in blue!)" %>

<%= f.label :list_id, "Choose your wish list" %>
<%= select_tag :list_id, options_for_select(@user.lists.all.collect{ |u| [u.name, u.id] }) %>

<label class="checkbox">
	<span class="icons">
		<span class="first-icon fui-checkbox-unchecked"></span>
		<span class="second-icon fui-checkbox-checked"></span>
	</span>
	<%= label :wish, "hide", "Hide from inspiration feed" %>
	<%= check_box :wish, "hide", {}, "true", "false" %>
</label>

<%= f.hidden_field :gender, value: @user.gender %>

<%= f.hidden_field :via %>