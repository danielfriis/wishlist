<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Wishlistt", root_path, class: "brand logo" %>
      <% if signed_in? %>
      
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
            
      <div class="nav-collapse collapse">
        <ul class="nav pull-right">
          <li>
            <a href="#make_wish" role="button" data-toggle="modal">Make a wish</a>
          </li>
          <li>
            <a href="<%= user_path(current_user) %>"><%= current_user.name %><%= image_tag avatar(current_user, :small), alt: current_user.name, class: "gravatar img-rounded" %></a>
          </li>
          
          <li id="fat-menu" class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <i class="icon-wrench"></i>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to "Profile", current_user %></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Help", help_path %></li>
              <li class="divider"></li>
              <li>
                <%= link_to "Sign out", signout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        </ul>
      </div>

      <% else %>

      <ul class="nav pull-right">  
        <li>
          <%= link_to "Sign in", signin_path %>
        </li>   
      </ul>

      <% end %>

    </div>
  </div>


</header>