<header class="navbar navbar-fixed-top">
  <div class="navbar-inner">
    <div class="container">
      <%= link_to "Wishlistt", root_path, class: "brand logo" %>
      <% if signed_in? %>
          
      <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </a>
            
      <div class="nav-collapse collapse">
        <ul class="nav pull-left visible-desktop">
          <li>
            <%= link_to "Find Inspiration", inspiration_path %>
          </li>
          <li>
            <%= form_tag(search_path, :method => "get", id: "navbar-search",class: "navbar-search pull-left") do %>
              <%= text_field_tag :search, params[:search], class: "span6", placeholder: "Search for products, people or shops", autocomplete: :off %>
            <% end %>
          </li>
        </ul>
        <ul class="nav pull-right">
          <li class="hidden-desktop">
            <a href="<%= user_path(current_user) %>"><%= first_name current_user.name %><%= image_tag avatar(current_user, :small), alt: current_user.name, class: "gravatar gravatar-small img-rounded" %></a>
          </li>
          <li class="hidden-desktop">
            <%= link_to "Find Inspiration", inspiration_path %>
          </li>
          <li class="hidden-desktop">
            <%= link_to "Find Friends", users_path %>
          </li>
          <li class="hidden-desktop">
            <%= link_to "About", about_path %>
          </li>
          <li class="hidden-desktop">
            <%= link_to "Contact", contact_path %>
          </li>
          <li class="hidden-desktop">
            <%= link_to "Sign out", signout_path, method: "delete" %>
          </li>
          <li class="visible-desktop">
            <%= link_to new_item_path, {remote: true, 'data-toggle' => 'modal', 'data-target' => "#make_wish", id: "add_wish", class: "btn btn-primary" } do %>
              <i class="fa fa-plus"></i>
            <% end %>
          </li>
          <li class="visible-desktop">
            <a data-url="/header_index" id="activities_popover" data-toggle="popover" data-placement="bottom" data-content="Fetching" data-trigger="click" data-html=true>
              <i class="fa fa-bell"></i>
            </a>
          </li>
          <li class="visible-desktop">
            <a href="<%= user_path(current_user) %>">
              <%= first_name current_user.name %><%= image_tag avatar(current_user, :small), alt: current_user.name, class: "gravatar gravatar-small img-rounded" %>
            </a>
            
          </li>
          <li class="visible-desktop">
            <a class="navbar-caret dropdown-toggle" data-toggle="dropdown">
              <i class="fa fa-chevron-down"></i>
            </a>
            <ul class="dropdown-menu dropdown-inverse">
              <li><%= link_to "My wish lists", current_user %></li>
              <li><%= link_to "Find Inspiration", inspiration_path %></li>
              <li><%= link_to "Find Friends", users_path %></li>
              <li><%= link_to "Find Vendors", vendors_path %></li>
              <li class="divider"></li>
              <li><%= link_to "About", about_path %></li>
              <li><%= link_to "Blog", "http://blog.wishlistt.com" %></li>
              <li><%= link_to "Contact", contact_path %></li>
              <li class="divider"></li>
              <li><%= link_to "Settings", edit_user_path(current_user) %></li>
              <li><%= link_to "Sign out", signout_path, method: "delete" %></li>
            </ul>
          </li>
        </ul>
      </div>

      <% else %>

      <ul class="nav pull-right">  
        <li><%= link_to "About", about_path %></li>
        <li class="divider-vertical"></li>
        <li>
          <%= link_to "Login", signin_path %>
        </li>
        <li><p class="muted">or</p></li>
        <li>
          <a href="#signUp" role="button" data-toggle="modal">Sign up</a>
        </li>
      </ul>

      <% end %>

    </div>
  </div>


</header>