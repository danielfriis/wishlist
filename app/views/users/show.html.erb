<% provide(:title, @user.name) %>
<div class="row">

  <div class="span12 user_info">
      <%= render 'shared/user_info' %>
  </div>

  <div class="span8">
    <h3>All Wishes</h3>
  </div>

  <aside class="pull-right span4">
    <h3>Lists (<%= @user.lists.count %>)</h3>

    <div class="clearfix"></div>

    <% if @user.lists.any? %>
      <ol class="nav nav-tabs nav-stacked">
        <%= render @lists %>
      </ol>
    <% end %>

    <%= render 'shared/create_list' if @list %>
  </aside>

  <div class="span8">
    <% if @user.items.any? %>
      <ol class="lists white-box">
        <%= render @items %>
      </ol>
    <% end %>
  </div>

</div>