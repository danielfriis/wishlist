<% provide(:title, @user.name) %>
<div class="row">
  <div class="span12 user_info">
      <%= render 'shared/user_info' %>
  </div>

  <div class="span8">
    <h3>Lists (<%= @user.lists.count %>)</h3>
  </div>
  <aside class="span4">
    <h3>Recent activity</h3>
  </aside>
  <div class="span8">
    <% if @user.lists.any? %>
      
      <ol class="lists">
        <%= render @lists %>
      </ol>
    <% end %>
    <%= render 'shared/create_list' if @list %>
  </div>
  


</div>