<div class="stats muted">
  <a href="<%= user_path(user) %>">
    <strong id="wishes_from_<%= user.id %>" class="stat">
      <%= user.wishes.count %>
    </strong>
    wishes
  </a>
  <a href="<%= following_user_path(user) %>">
    <strong id="following_<%= user.id %>" class="stat">
      <%= user.followed_users.count %>
    </strong>
    following
  </a>
  <a href="<%= followers_user_path(user) %>">
    <strong id="followers_<%= user.id %>" class="stat">
      <%= user.followers.count %>
    </strong>
    followers
  </a>
</div>