<div class="media new_comment" id="new_comment">
  <a class="pull-left" href="#">
    <%= image_tag avatar(current_user, :medium), alt: current_user.name, class: "gravatar img-rounded" %>
  </a>
  <div class="media-body">
  	<%= form_for [@commentable, @comment] do |f| %>
	<% if @comment.errors.any? %>
	<div class="error_messages">
		<h2>Please correct the following errors</h2>
		<ul>
			<% @comment.errors.full_messages.each do |msg| %>
				<li><%= msg %></li>
			<% end %>
		</ul>
	</div>
	<% end %>
	    <%= f.text_area :content, rows: 2, placeholder: "Write a comment" %>
	    <%= f.hidden_field :user_id, value: current_user.id %>
	    <%= f.submit "Post comment", class: "btn" %>
	  </div>
	</div>
<% end %>