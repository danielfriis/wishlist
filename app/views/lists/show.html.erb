<% provide(:title, @list.name) %>
<div class="row">
  <div class="span12 user_info">
    <div class="row">
      <div class="span8">
        <%= render partial: 'shared/user_info', locals: {:user => @user} %>
      </div>
    </div>
  </div>
</div>
<div class="row">
  <div class="span9">
      <div class="white-box user_list">
        <div class="user_list_title">
          <h2><%= best_in_place_if current_user?(@list.user), [@user, @list], :name, nil: "Please name your list" %></h2>
          <p class="muted"><%= pluralize(@list.wishes.count, "wish") %></p>
          <% if current_user?(@list.user) %>
            <%= link_to "Add wish", new_item_path, {remote: true, 'data-toggle' => 'modal', 'data-target' => "#make_wish", id: "add_wish", class: "btn btn-primary btn-small"} %>
            <% end %>
        </div>
        
          <div class="list-add-wish visible-desktop">
            <%= form_for(Item.new, html: { multipart: true }) do |f| %>

              <%= text_field_tag :search, params[:search], :data => {:provide => "typeahead"}, autocomplete: :off, placeholder: "Type the product you wish for or paste a link." %>
  
              <div class="item_fields" style="display:none;">

                <span id="item-display-image" class="btn btn-default btn-large btn-file pull-right" style="background-image:url(<%= asset_path('choose-image.png') %>);" data-images="" >
                  <%= f.file_field :image, onchange: "readURL(this);" %>
                </span>

                <%= f.hidden_field :remote_image_url, placeholder: "http://www.abc-shop.com/image.png" %>

                <%= f.text_field :title, placeholder: "Product title (Warm Sweater from ABC Brand)" %>

                <%= f.text_field :link, placeholder: "Optional: Link to product (http://www. ...)" %>

                <%= f.hidden_field :price, placeholder: "Optional: Price (E.g.: 20 USD or 100 DKK)" %>

                <%= text_field_tag :note, nil, placeholder: "Optional: Short comment (E.g. Love it in blue!)" %>

                <%= hidden_field_tag :list_id, @list.id %>

                <label class="checkbox">
                  <span class="icons">
                    <span class="first-icon fui-checkbox-unchecked"></span>
                    <span class="second-icon fui-checkbox-checked"></span>
                  </span>
                  <%= label :wish, "hide", "Hide from inspiration feed" %>
                  <%= check_box :wish, "hide", {}, "true", "false" %>
                </label>

                <%= f.hidden_field :gender, value: @user.gender %>

                <%= f.submit "Add wish", class: "btn btn-primary" %>

                <hr />
              </div>
            <% end %>
          </div>
        
        <ul class="wishes <% if current_user?(@list.user) %>dragndrop<% end %> unstyled" id="list_<%= @list.id %>" data-update-url="<%= sort_wishes_url %>" data-list-id="<%= @list.id %>">
          <% if @list.items.any? %>
            <%= render @wishes %>
          <% else %>
            <%= render partial: 'shared/list_wo_wish', locals: {list: @list} %>
          <% end %>
          <% if current_user?(@list.user) %>
            <%= link_to "Add wish", new_item_path, {remote: true, 'data-toggle' => 'modal', 'data-target' => "#make_wish", id: "add_wish", class: "user_list_add_wish"} %>
          <% end %>
        </ul>
      </div>
  </div>

  <aside class="pull-right span3">
    <%= render 'shared/aside_share' if current_user?(@list.user) %>
    <%= render 'shared/aside_lists' %>
  </aside>

</div>