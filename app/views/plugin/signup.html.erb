<% provide(:title, 'Sign up') %>

<div class="row">
    <%= link_to "Back", plugin_index_path %>
    <div class="span6 offset3 white-box">
	    <h1>Sign up</h1>
        <%= form_for @user, url: { controller: 'plugin', action: 'signup_create' } do |f| %>
            <%= render 'fields', f: f %>

            <%= f.submit "Create my account", class: "btn btn-large btn-primary" %>
        <% end %>
    </div>
</div>
