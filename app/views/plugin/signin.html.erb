<% provide(:title, "Sign in") %>

<div class="row">
    <div class="span6 white-box">
        <%= link_to "Back", plugin_index_path %>

        <h3>Sign in</h3>
        <hr>
        <span class="spacer center">
            <a href="auth/facebook" class="btn btn-facebook btn-large">
                <i class="icon-facebook icon-large"></i><span> Sign in with Facebook</span>
            </a>
        </span>
        <hr>
        <%= form_for(:session, url: sessions_path) do |f| %>

            <%= f.text_field :email, placeholder: "E-mail" %>

            <%= f.password_field :password, placeholder: "Password" %>

            <%= f.submit "Sign in", class: "btn btn-large btn-block btn-primary" %>
        <% end %>

        <hr>

        <p><%= link_to "New user?", signup_path %> Or did you <%= link_to "forget your password?", new_password_reset_path %></p>

    </div>
</div>
